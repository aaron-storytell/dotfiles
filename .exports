# Go Programming
export GO111MODULE=on
export GOPATH=$HOME/go
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/go/bin/:$GOPATH/bin"
export PATH=$PATH:$GOPATH/bin

# Home path bin
export PATH=$PATH:~/bin

# Mono Framework
export PATH=$PATH:/Library/Frameworks/Mono.framework/Versions/Current/Commands

# Add Intellij IDEA
export PATH=$PATH:~/idea

# Add Visual Studio Code (code)
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

# Add Protoc (gRPC)
export PATH="$PATH:$HOME/.local/protoc-3/bin"

# Add Google Cloud Tools
export PATH="$PATH:$HOME/google-cloud-sdk/bin/"

# Add protoc for protobuf compilaton
export PATH="$PATH:$HOME/protoc/bin

# Add Rust
export PATH="$PATH:$HOME/.cargo/bin"

# Add frequently used project paths
export BCMPATH=$GOPATH/src/github.com/aarongreenlee/big-cloud-machine
export GHPATH=$HOME/go/src/github.com

# Google Cloud
#
# The next line updates PATH for the Google Cloud SDK.
if [ -f '$HOME/google-cloud-sdk/path.zsh.inc' ]; then . '$HOME/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '$HOME/google-cloud-sdk/completion.zsh.inc' ]; then . '$HOME/google-cloud-sdk/completion.zsh.inc'; fi
